<odoo>
    <record id="view_library_book_form" model="ir.ui.view">
        <field name="name">library_management.book.form</field>
        <field name="model">library_management.book</field>
        <field name="arch" type="xml">
            <form string="Library_Book">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="author"/>
                        <field name="published_date"/>
                        <field name="isbn"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_library_book_tree" model="ir.ui.view">
        <field name="name">library_management.book.tree</field>
        <field name="model">library_management.book</field>
        <field name="arch" type="xml">
            <tree string="Library_Books">
                <field name="name"/>
                <field name="author"/>
                <field name="published_date"/>
                <field name="isbn"/>
            </tree>
        </field>
    </record>

    <menuitem id="menu_library_root" name="Library"/>
    <menuitem id="menu_library_book" name="Books" parent="menu_library_root"/>

    <record id="action_library_book" model="ir.actions.act_window">
        <field name="name">Library_Books</field>
        <field name="res_model">library_management.book</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_library_book_action" name="Library_Books" parent="menu_library_book" action="action_library_book"/>
</odoo>
